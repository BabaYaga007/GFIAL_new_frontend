<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators" style="margin-bottom: 0px;">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active" style="margin: 5px;"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1" style="margin: 5px;"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2" style="margin: 5px;"></li>
    </ol>
    <div class="carousel-inner">



      <!-- Frame of first three cards -->
      <div class="carousel-item active">
          <ul class="cards">
            <% projects.forEach(function(project) { %>
                
              <li class="cards_item">
                <div class="card">
                  <div class="card_image"><img src="<%= project.img %>"></div>
                  <div class="card_content">
                    <h2 class="card_title"><%= project.name %></h2>
                    <p class="card_text">Description of Project:
                    <span><%= project.description %> </span>
                    <div class="card-budget"><i></i><b>Budget :- </b><%= project.budget %></div>
                    <div class="card-expect"><i></i><b>Expected By :- </b><%= project.date %></div>
                    <div class="card-skill"><i></i><b>Skill :- </b><%= project.skill %></div>
                    <div class="card-proposal"><i></i><b>Proposals :- </b><%= project.proposals %></div>
                    </p>
                    <script></script>
                  <button class="btn card_btn" style="width:50%;display: block; margin: auto; border: 1px solid grey;">Read More</button>
                  </div>
                </div>
              </li>
              
            <% }); %>
          </ul>
      </div>

      <!-- Frame of next three cards -->
      <div class="carousel-item ">
          <ul class="cards">
            <% projects.forEach(function(project) { %>
                
                <li class="cards_item">
                  <div class="card">
                    <div class="card_image"><img src="<%= project.img %>"></div>
                    <div class="card_content">
                      <h2 class="card_title"><%= project.name %></h2>
                      <p class="card_text">Description of Project:
                      <span><%= project.description %> </span>
                      <div class="card-budget"><i></i><b>Budget :- </b><%= project.budget %></div>
                      <div class="card-expect"><i></i><b>Expected By :- </b><%= project.date %></div>
                      <div class="card-skill"><i></i><b>Skill :- </b><%= project.skill %></div>
                      <div class="card-proposal"><i></i><b>Proposals :- </b><%= project.proposals %></div>
                      </p>
                      <button class="btn card_btn" onclick="dataModel(project)" style="width:50%;display: block; margin: auto; border: 1px solid grey;">Read More</button>
                    </div>
                  </div>
                </li>
                
            <% }); %>
          </ul>
      </div>

      <!-- Frame of last three cards -->
      <div class="carousel-item ">
        <ul class="cards">
            <% projects.forEach(function(project) { %>
                
                <li class="cards_item">
                  <div class="card">
                    <div class="card_image"><img src="<%= project.img %>"></div>
                    <div class="card_content">
                      <h2 class="card_title"><%= project.name %></h2>
                      <p class="card_text">Description of Project:
                      <span><%= project.description %> </span>
                      <div class="card-budget"><i></i><b>Budget :- </b><%= project.budget %></div>
                      <div class="card-expect"><i></i><b>Expected By :- </b><%= project.date %></div>
                      <div class="card-skill"><i></i><b>Skill :- </b><%= project.skill %></div>
                      <div class="card-proposal"><i></i><b>Proposals :- </b><%= project.proposals %></div>
                      </p>
                      <button class="btn card_btn" onclick="dataModel(project)" style="width:50%;display: block; margin: auto; border: 1px solid grey;">Read More</button>
                    </div>
                  </div>
                </li>
                
            <% }); %>
          </ul>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev" style="width: 7%;">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next" style="width: 7%;">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

<script>

function dataModel(project) {

  var data = { ...project};

  console.log(data);

  document.getElementById('modal-name').innerHTML = data.name;
  document.getElementById('modal-desc').innerHTML = data.description;
  document.getElementById('modal-skill').innerHTML = data.skill;
  document.getElementById('modal-proposal').innerHTML = data.proposal;
  document.getElementById('modal-budget').innerHTML = data.budget;
  document.getElementById('modal-expect').innerHTML = data.expect;

  document.getElementById('id01').style.display='block';

}; 

</script>

